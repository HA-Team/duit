#propsListing
  fieldset
    border: none
    border-top: 1px solid var(--primary-red)
  legend
    text-align: center
    padding: 0 1em
    margin-bottom: 18px
  .search
    width: 100%
  .no-results
    height: 50vh
  input, input[type="text"]
    height: 25px
    padding: 0 5px
  .badge-danger, .badge-info
    cursor: pointer
  .spinner
    margin-left: 61%
    margin-top: 120px
  .busy-sidebar
    opacity: 0.5
  .listing-item
    height: 100%
    max-height: 525px
  .listing-title
    padding-bottom: 0
    h4
      max-height: 60px
      overflow: hidden
    a
      height: 45px
      overflow: hidden
  .listing-content
    ul
      text-align: center
    li
      padding-left: 10px
  .sidebar
    h4
      margin-top: 5px
      margin-bottom: 5px
    .widget
      bottom: 35px
  @media (min-width: 991px)
    .sidebar-col
      position: -webkit-sticky
      position: sticky
      top: 70px
      height: 100vh
      overflow: scroll
    ::-webkit-scrollbar {
        width: 0px  /* remove scrollbar space */
        background: transparent  /* optional: just make scrollbar invisible */
    }